upstream app_server {
    server http://localhost:3000 fail_timeout=0;
}

server {
    listen 1024 default;
    client_max_body_size 4G;
    server_name _;
    
    keepalive_timeout 5;
    root /var/www/html;

    location / {
        try_files $uri @app;
    }
    
    location @app {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        
        proxy_pass http://app_server;
    }

    error_page  404              /404.html;
    location = /404.html {
        root /var/www/html;
    }

    error_page   500 502 504  /50x.html;
    location = /50x.html {
        root /var/www/html;
    }
        
}
